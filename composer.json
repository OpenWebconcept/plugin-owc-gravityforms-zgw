{
	"name": "plugin/owc-gravityforms-zgw",
	"description": "Make a connection between ZGW and GravityForms",
	"version": "1.0.0",
	"type": "wordpress-plugin",
	"scripts": {
		"phpcs": "./vendor/squizlabs/php_codesniffer/bin/phpcs",
		"phpcbf": "phpcbf",
		"post-install-cmd": [
			"composer dump-autoload"
		],
		"post-update-cmd": [
			"composer dump-autoload"
		],
		"test": "vendor/bin/pest",
		"test:coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage"
	},
	"autoload": {
		"psr-4": {
			"OWCGravityFormsZGW\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"OWCGravityFormsZGW\\Tests\\": "tests/"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"composer/installers": true,
			"pestphp/pest-plugin": true
		}
	},
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		},
		{
			"type": "vcs",
			"url": "git@github.com:OpenWebconcept/owc-zgw-api.git"
		}
	],
	"require": {
		"monolog/monolog": "^2.0",
		"owc/zgw-api": "dev-main",
		"php": ">8.1",
		"php-di/php-di": "^6.0"
	},
	"require-dev": {
		"pestphp/pest": "^2.34",
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^3.0"
	}
}
